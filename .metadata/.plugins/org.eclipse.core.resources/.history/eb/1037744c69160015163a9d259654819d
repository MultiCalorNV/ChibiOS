		 ${POLARSSL}/library/asn1parse.c \
		 ${POLARSSL}/library/certs.c \
		 ${POLARSSL}/library/rsa.c \
		 ${POLARSSL}/library/bignum.c \
		 ${POLARSSL}/library/pem.c
		 
SSLINC = \
		 ${POLARSSL}/include/polarssl
